generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Estudiante {
  id        String   @id @default(uuid())
  nombre    String
  apellidos String
  dni       String   @unique
  cursos    Curso[]
}

model Curso {
  id           String   @id @default(uuid())
  nombre       String
  creditos     Int
  semestre     Int
  estudiante   Estudiante @relation(fields: [estudianteId], references: [id])
  estudianteId String
}